#!/usr/bin/env node
const pkg = require('../package.json');
const program = require('commander');
program
  .version(pkg.version)
  .command('add <script> [action]', 'Add script')
  .command('create <script> <template>', 'Create script from template')
  .command('install <template>', 'Install template')
  .command('list <repo>', 'list installed templates')
  .command('add-repo <repo> <url>', 'add repo')
  .command('init', "initialize")
  .parse(process.argv);
