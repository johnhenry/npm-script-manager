#!/usr/bin/env node
const fs = require(`fs`);
const path = require(`path`);
const program = require(`commander`);
const argv = program
.arguments(`<name> [scripts...]`)
.action(function(name, action){
  const packageLocation = path.join(process.cwd(), `package.json`);
  let pkg;
  try{
    pkg = require(packageLocation);
  }catch(e){
    pkg = {};
  }
  pkg.scripts = pkg.scripts || {};
  pkg.scripts[name] = scripts.map(script=>pkg.scripts[script]).join(` && `);
  fs.writeFileSync(packageLocation, JSON.stringify(pkg, null,` `))
})
.parse(process.argv);
